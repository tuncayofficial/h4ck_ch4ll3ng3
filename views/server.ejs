<body>
    <nav>
        <ul>
            <li class="item"><a href = "/">Main Server</a></li>
            <li class="item"><a href = "/">DarkNet</a></li>
            <li target = "_blank" class="item"><a href = "/login">Login Your PC</a></li>
        </ul>
    </nav>
    <form action = "/delete" method = "POST">
        <h1>Delete User by Name</h1>
        <input placeholder="Username" name = "username" class = "username-input">
        <input type = "submit" id = "deletebtn">
        <div class = "message"></div>
    </form>
</body>
<script>
 let deleteButton = document.querySelector("#deletebtn")
 let message = document.querySelector(".message")
 let form = document.querySelector("form")
 let input = document.querySelector(".username-input")

 form.addEventListener("submit",(e)=>{
     e.preventDefault()
 })

 deleteButton.addEventListener("click",function(){
     if(input.value === "d3st4__"){
         message.innerHTML = "User deleted successfully!"
         setTimeout(()=>{
            window.location.href = "http://localhost:8080/success"
         }, 3500)
     } else {
         return
     }
 
 })
</script>
<style>
    form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width : 500px;
        height: 500px;
        background-color: white;
        color: black;
        border-radius: 7px;
        margin: auto;
        margin-top: 40px;
    }

    form input {
        margin : 30px;
        border: 3px solid black;
    }
</style>
